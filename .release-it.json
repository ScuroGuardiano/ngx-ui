{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "perf",
            "section": "Performances"
          },
          {
            "type": "refactor",
            "section": "Refactor"
          },
          {
            "type": "docs",
            "section": "Documentations"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "out": ["package.json", "package-lock.json", "packages/ngx-ui/package*.json"]
    }
  },
  "npm": {
    "publish": false
  },
  "git": {
    "push": false,
    "commitMessage": "(release): ${version}"
  },
  "github": {
    "releaseNotes": true
  },
  "hooks": {
    "after:bump": "git checkout -b release/${version}",
    "after:release": "git push origin HEAD --tags"
  }
}
